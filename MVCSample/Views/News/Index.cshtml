
@model List<News>;

<a asp-controller="News" asp-action="Create">Create News</a>
<br />
<br />

@section NewsTable {
    <div>
        <table class="table-striped">
            <tr>
                <td align="center"><h5>Id</h5></td>
                <td align="center"><h5>Title</h5></td>
                <td align="center"><h5>Text</h5></td>
                <td><h5>AuthorName</h5></td>
                <td><h5>IsFake</h5></td>
            </tr>
            @foreach (News obj in Model)
            {
                <tr>
                    <td align="center">@obj.Id</td>
                    <td>@obj.Title</td>
                    <td>@obj.Text</td>
                    <td>
                        <a asp-controller="Human" asp-action="Authors" asp-route-humanId="@obj.AuthorId">
                            @obj.Author.FirstName @obj.Author.LastName
                        </a>
                    </td>
                    <td align="center">@obj.IsFake</td>
                </tr>
            }
        </table>
    </div>
}