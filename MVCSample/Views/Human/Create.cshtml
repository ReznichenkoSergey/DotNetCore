@model Human

<form asp-controller="Human" asp-action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <label asp-for="FirstName"></label><br>
    <input asp-for="FirstName" type="text" /><br>

    <label asp-for="LastName"></label><br>
    <input asp-for="LastName" type="text" /><br>

    <label asp-for="Age"></label><br>
    <input asp-for="Age" type="number" /><br>

    <label asp-for="IsSick"></label><br>
    <input asp-for="IsSick" type="checkbox" /><br>

    <label asp-for="Gender"></label><br>
    <input asp-for="Gender" type="text" /><br>

    <label asp-for="CountryId"></label><br>
    <input asp-for="CountryId" type="number" /><br>

    <button type="submit">Create human</button>
</form>
